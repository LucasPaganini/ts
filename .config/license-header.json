{
  "ignore": [".config", "scripts", "**/*/assets", ".git", ".github", "*", ".idea"],
  "license": ".config/license-header.txt",
  "licenseFormats": {
    "ts|js": {
      "prepend": "/*************************************************************************",
      "append": " **************************************************************************/\n",
      "eachLine": {
        "prepend": " * "
      }
    }
  },
  "defaultFormat": {
    "prepend": "/*",
    "append": "*/"
  },
  "trailingWhitespace": "TRIM"
}
